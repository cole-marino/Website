<!DOCTYPE html>
<DefaultLayout title={"Projects"}>

    <body>
        <!-- header -->
        <head>
            <h1  style= "padding-top: 1.5%; text-shadow: 5px 5px black; color: white; text-align:center; font-size:600%; font-family:verdana;">
                <b>
                    Projects üë®‚Äçüíª
                </b>
            </h1>
        </head>

        <!-- displays various projects with links leading to more information -->
            <!-- TODO: Try to implement functional versions of these projects! -->
        <main class="md:p-4">

            <!-- creates board of coding projects! -->
            <div class="mt-8">
                
                <!-- item cards for projects -->
                <div class="flex justify-center">
                    <div class="grid md:grid-cols-3 grid-cols-1 grid-flow-row justify-evenly gap-6 scale-x-75 scale-y-75">
                        {
                            projects.map((projects) => (
                                <ItemCard
                                title={projects.data.title}
                                description={projects.data.description}
                                date={projects.data.publishDate}
                                slug={projects.slug}
                                img={projects.data.img}
                                img_alt={projects.data.img_alt}
                                tags={projects.data.tags}
                                /> 
                            </>
                            ))
                        }
                    </div>
                </div>
            </div>
        </main>

