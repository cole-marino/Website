---
import DefaultLayout from '../layouts/DefaultLayout.astro'
import ItemCard from '../components/ItemCard.astro'
import { getCollection } from 'astro:content';
import SkillsCard from '../components/SkillsCard.astro'
import {csSkills} from "../utils/data.ts";
const text = 'text';
const margin = 'margin';
const info = 'info';

interface SkillsCardProp{
    title: string;
    url: string;
    img: string;
    img_alt: string;
}

const projects = (await getCollection('projects'))
  .filter((post) => !post.data.draft)
  .slice(0, 4);

---

<!--
	This is the astro file for my main site landing page!

	@Author: Cole Marino
	@Author: cole1.marino@gmail.com


I see you are reading my code!
		╭─────╮
		│ ◠ ◡ ◠
		╰─────╯
	Thanks for validating my work!

Hope you have a great day, friend!
-CVM
-->

<DefaultLayout title={"Nicola Vittorio Marino"}>

	<style is:global>
	</style>


	<body>
		<!-- header! -->
		<head>
			<meta charset="utf-8" />
			<meta name="viewport" content="width=device-width" />
			<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
			<meta name="generator" content={Astro.generator} />

			<h1 class="sm:pt-[5%] md:pt-[1.5%] g:px-8" style= "text-shadow: 5px 5px black; color: white; text-align:center; font-family:verdana;"> <!-- font-size:100px; -->
				<b class="text-h-sm xm:text-h-xm md:text-h-md lg:text-h-lg xl:text-h-xl">
					Hello there! 👋
				</b>
			</h1>
		</head>

		
		<body class="bg-gray-100">
    <!-- main body -->
    <main class="md:p-16">

        <!-- center main information -->
        <div class="m-auto max-w-7xl md:mt-4 lg:mt-4 mt-0">
            <div class="m-auto flex max-w-4xl gap-y-2 md:max-w-none items-center justify-center gap-4 flex-col md:flex-row">

                <!-- composite image -->
				<div class="scale-[75%] md:scale-[100%] lg:scale-[100%]">
					<div class="m-auto md:hover:scale-[110%] hover:scale-[105%] block shadow-lg rounded-2xl hoverImgEffect">
						<a href="./contact">
							<img src="./images/COMPOSITE.png" alt="Composite" class="rounded-2xl" id="compositePNG">
						</a>
					</div>
				</div>

                <!-- personal description -->
				<div class="text-center px-8">

					<div class="md:py-12 lg:py-12">
						<p class="font-extrabold" style="font-family: Verdana;">
							<span class="h-72 bg-gradient-to-r from-blue-700 to-blue-800 text-transparent bg-clip-text xm:text-tt-xm text-tt-sm md:text-tt-md lg:text-tt-lg xl:text-tt-xl" style="">
								Welcome to my home page
							</span>
						</p>

						<!-- Old gradient: bg-gradient-to-r from-blue-700 to-blue-800 -->
						<div class="xm:text-t-xm text-t-sm md:text-t-md lg:text-t-lg xl:text-t-xl" style="">
							<br>
								I am 
								<span class="h-72 bg-gradient-to-r from-blue-700 to-blue-800 text-transparent bg-clip-text font-extrabold">
									Nicola Marino
								</span>
								also known as Cole, a dedicated third-year undergraduate student pursuing a Bachelors of Science in Computer Science. 
								My unyielding commitment to the rapidly evolving world of modern technology drives me to continuously advance and excel. 
								Since an early juncture of my life, I've been captivated by programming, critical thinking, and problem-solving. 
								This website showcases all my professional projects, credentials, and services.
							</br>
						</div>
					</div>
				</div>
            </div>
        </div>

		<!-- line separating bio and bottom -->
			<!-- MAKE ALL WIDTHS IN PX -->
		<div class="flex justify-center mt-12 mb-4">
			<hr class="md:w-[58%] lg:w-[58%] xl:w-[1220px] w-[90%] my-2 h-2 rounded-md bg-gradient-to-r from-blue-700 to-blue-800" />
		</div>


        <!-- web page directory -->
        <div>
			<span class="font-bold text-4x2 md:hover:scale-[110%] hover:scale-[105%] hoverImgEffect" style="white-space: nowrap;">

				<!-- draws the directory and other effects (which are very pretty) -->
					<!-- ADD LETTER OF RECOMMENDATIONS PAGE -->
				<nav class="flex-wrap flex justify-center space-x-4 pb-4">
					{[
					['📧', 'Contact', './contact'],
					['📄', 'Résumé', './resume'],
					['👨‍💻', 'Projects', './projects'],
					//['👨‍⚖️', 'References', './references'],
					['👨🏻‍🔧', 'Services', './services'],
					].map(([emoji, title, url]) => (
						<a href={url} class="transition px-2 py-2 text-slate-900 font-medium c-card block hover:shadow-xl rounded-lg overflow-shown hover:scale-[110%] pl-[1%] pr-[1%]">
							<!-- this needs to be separate so the emoji isnt a weird color -->
							<p style="font-size: 45px;">
								{emoji}
								<span class="bg-gradient-to-r from-blue-700 to-blue-800 font-bold text-transparent hoverImgEffect bg-clip-text text-tt-sm md:text-tt-md lg:text-tt-lg xl:text-tt-xl">
									{title}
								</span>
							</p>
						</a>
					))}
				</nav>
			</span>
		</div>

		<!-- line separating bio and bottom -->
			<!-- MAKE ALL WIDTHS IN PX -->
		<div class="flex justify-center mb-12">
			<hr class="md:w-[58%] lg:w-[58%] xl:w-[1220px] w-[90%] my-2 h-2 rounded-md bg-gradient-to-r from-blue-700 to-blue-800" />
		</div>


		<!-- interests -->
		<div class="m-auto max-w-7xl my-2 mb-8 text-black dark:text-white">

			<h2 class="text-tta-sm md:text-tta-md lg:text-tta-lg xl:text-tta-xl font-extrabold text-blue-700 mb-8">
				Interests
			</h2>

			<!-- computer science interests -->
			<div>
				<h3 class="text-tt-sm md:text-tt-md lg:text-tt-lg xl:text-tt-xl font-extrabold text-blue-700 mb-2">
					Computer Science
				</h3>
				<p class="italic text-t-sm md:text-t-md lg:text-t-lg xl:text-t-xl font-normal text-black mb-4">
					As a lover of everything involving computers, I am actively expanding my 
					knowledge of this vast field both inside and out of college courses. 
					Below are a few of my favorite computing languages, technologies, and frameworks!
				</p>

				<!-- different coding interests -->
				<!-- draws the directory and other effects (which are very pretty) -->
				<div class="flex flex-row items-center max-w-3xl m-auto flex-wrap overflow-auto">
					{
						csSkills.map((tech: SkillsCardProp) => (
							<div class="md:w-1/3 sm:w-1/2 w-full px-4 py-2">
								<a href={tech.url} target="_blank" rel="noopener noreferrer" class="cursor-pointer text-black">
									<SkillsCard {...tech} />
								</a>
							</div>
						))
					}
				</div>

				<!-- extracurricular activities -->
				
				<!-- 
				<div>
					<h3 class="text-tt-sm md:text-tt-md lg:text-tt-lg xl:text-tt-xl font-extrabold text-blue-600 mb-2">
						Extracurricular Activities
					</h3>
					<p class="italic text-t-sm md:text-t-md lg:text-t-lg xl:text-t-xl font-normal text-black mb-4">
						
					</p>
					
				</div>
				-->

				<!-- featured work itel cards -->
				<div class="mt-8 mb-8">
					<h3 class="text-tt-sm md:text-tt-md lg:text-tt-lg xl:text-tt-xl font-extrabold text-blue-700 mb-2">
						Featured Work
					</h3>
					<p class="italic text-t-sm md:text-t-md lg:text-t-lg xl:text-t-xl font-normal text-black mb-4">
						Take a look at some of my most recent and favorite Computer Science related projects:
					</p>

					<!-- item cards -->
					<div class="flex justify-center scale-[95%] md:scale-[95%] lg:scale-[95%] xl:scale-[95%]">
						<div class="grid md:grid-cols-3 grid-cols-1 grid-flow-row justify-evenly gap-6 ">
							{
								projects.sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime()).slice(0, 3) // three most recent projects
								.map((projects) => (
									<ItemCard
									title={projects.data.title}
									description={projects.data.description}
									date={projects.data.publishDate}
									slug={projects.slug}
									img={projects.data.img}
									img_alt={projects.data.img_alt}
									tags={projects.data.tags}
									/> 
								</>
								))
							}
						</div>
					</div>

			</div>
		</div>

    </main>
</body>

		<!-- Astro runtime -->
		<script type="module" src="website\src\components\nav.js"></script>
	
</DefaultLayout>



