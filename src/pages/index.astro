---
import DefaultLayout from '../layouts/DefaultLayout.astro'
import ItemCard from '../components/ItemCard.astro'
import { getCollection } from 'astro:content';
const text = 'text';
const margin = 'margin';
const info = 'info';

const projects = (await getCollection('projects'))
  .filter((post) => !post.data.draft)
  .slice(0, 4);

---

<!--
	This is the astro file for my main site landing page!

	@Author: Cole Marino
	@Author: cole1.marino@gmail.com


I see you are reading my code!
		╭─────╮
		│ ◠ ◡ ◠
		╰─────╯
	Thanks for validating my work!

Hope you have a great day, friend!
-CVM
-->

<DefaultLayout title={"Nicola Vittorio Marino"}>

	<style is:global>
		.text{
        	color: rgb(224, 224, 224);
			white-space: nowrap;
    	}

		.info{
			padding-left: 15%;
			font: bold;
			font-size: 28px;
			width: 20%;
			height: 100%;
			background: clear;
			white-space: nowrap;
		}
		

	</style>


	<body>
		<!-- header! -->
		<head>
			<meta charset="utf-8" />
			<meta name="viewport" content="width=device-width" />
			<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
			<meta name="generator" content={Astro.generator} />

			<h1 class="sm:pt-[3%] md:mb-4 mb-12 lg:px-8 md:pt-[1.5%]" style= "text-shadow: 5px 5px black; color: white; text-align:center; font-family:verdana;"> <!-- font-size:100px; -->
				<b class="text-h-sm xm:text-h-xm md:text-h-md lg:text-h-lg xl:text-h-xl">
					Hello there! 👋
				</b>

			</h1>
		</head>

		
		<body class="bg-gray-100">
    <!-- main body -->
    <main class="md:p-4">

        <!-- center main information -->
        <div class="m-auto max-w-7xl md:mt-12 lg:mt-12 mt-0">
            <div class="m-auto flex max-w-4xl gap-y-2 md:max-w-none items-center justify-center gap-4 flex-col md:flex-row">

                <!-- composite image -->
				<div class="scale-[75%] md:scale-[100%] lg:scale-[100%]">
					<div class="m-auto md:hover:scale-[110%] hover:scale-[105%] block shadow-lg rounded-2xl hoverImgEffect">
						<a href="./contact">
							<img src="./images/COMPOSITE.png" alt="Composite" class="rounded-2xl" id="compositePNG">
						</a>
					</div>
				</div>

                <!-- personal description -->
				<div class="text-center px-8">

					<div class="md:py-12 lg:py-12">
						<p class="font-extrabold" style="font-family: Verdana;">
							<span class="h-72 bg-gradient-to-r from-purple-600 to-blue-500 text-transparent bg-clip-text text-tt-sm md:text-tt-md lg:text-tt-lg xl:text-tt-xl" style="">
								Welcome to my website
							</span>
						</p>

						
						<div class="text-t-sm md:text-t-md lg:text-t-lg xl:text-t-xl" style="">
							<br>
								I am 
								<span class="h-72 bg-gradient-to-r from-purple-600 to-blue-500 text-transparent bg-clip-text font-extrabold">
									Nicola Marino
								</span>
								also known as Cole, a dedicated third-year undergraduate student pursuing a Bachelors of Science in Computer Science. 
								My unyielding commitment to the rapidly evolving world of modern technology drives me to continuously advance and excel. 
								Since an early juncture of my life, I've been captivated by programming, critical thinking, and problem-solving. 
								This website showcases all my professional projects, credentials, and services.
							</br>
						</div>
					</div>
				</div>
            </div>
        </div>

		<!-- line separating bio and bottom -->
		<div class="flex justify-center mt-28 mb-8">
			<hr class="md:w-[52%] lg:w-[52%] xl:w-[1216px] w-[90%] my-2 h-2 rounded-md bg-gradient-to-r from-purple-600 to-blue-500" />
		</div>


        <!-- web page directory -->
        <div>
			<span class="font-bold text-4x2 md:hover:scale-[110%] hover:scale-[105%] hoverImgEffect" style="white-space: nowrap;">

				<!-- draws the directory and other effects (which are very pretty) -->
				<nav class="flex-wrap flex justify-center space-x-4 pb-10">
					{[
					['📧', 'Contact', './contact'],
					['📄', 'Résumé', './resume'],
					['👨‍💻', ' Projects', './projects'],
					['👨🏻‍🔧', ' Services', './services'],
					].map(([emoji, title, url]) => (
						<a href={url} class="transition px-2 py-2 text-slate-900 font-medium c-card block hover:shadow-xl rounded-lg overflow-shown hover:scale-[110%] pl-[1%] pr-[1%]">
							<!-- this needs to be separate so the emoji isnt a weird color -->
							<p style="font-size: 45px;">
								{emoji}
								<span class="bg-gradient-to-r from-blue-800 to-blue-500 font-bold text-transparent hoverImgEffect bg-clip-text text-tt-sm md:text-tt-md lg:text-tt-lg xl:text-tt-xl">
									{title}
								</span>
							</p>
						</a>
					))}
				</nav>
			</span>
		</div>

		<!-- line separating bio and bottom -->
		<div class="flex justify-center mb-28">
			<hr class="md:w-[52%] lg:w-[45%] xl:w-[1088px] w-[90%] my-2 h-2 rounded-md bg-gradient-to-r from-purple-600 to-blue-500" />
		</div>

		<!-- featured work text -->
		<div class="flex m-auto justify-center mt-24">
			<span class="font-extrabold bg-blue-500 text-transparent bg-clip-text text-[65px] md:text-[68px] lg:text-[76px] xl:text-[76px]" style=""> <!-- OG font size was 76px -->
				Featured Work
			</span>
		</div>

		<!-- featured work itel cards -->
		<div>
			<!-- item cards -->
			<div class="flex justify-center scale-[95%] md:scale-[68%] lg:scale-[68%] xl:scale-[68%]">
				<div class="grid md:grid-cols-3 grid-cols-1 grid-flow-row justify-evenly gap-6 ">
					{
						projects.map((projects) => (
							<ItemCard
							title={projects.data.title}
							description={projects.data.description}
							date={projects.data.publishDate}
							slug={projects.slug}
							img={projects.data.img}
							img_alt={projects.data.img_alt}
							tags={projects.data.tags}
							/> 
						</>
						))
					}
				</div>
			</div>
		</div>

    </main>
</body>

		<!-- Astro runtime -->
		<script type="module" src="website\src\components\nav.js"></script>
	
</DefaultLayout>



