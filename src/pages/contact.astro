---
import DefaultLayout from '../layouts/DefaultLayout.astro'
---

<!--
	Page for my personal contact information!

	@Author: Cole Marino
	@Author: cole1.marino@gmail.com
-->

<!DOCTYPE html>
<DefaultLayout title={"Contact Me"}>
    <body>
        <!-- header -->
        <head>
            <h1  style= "padding-top: 1.5%; text-shadow: 5px 5px black; color: white; text-align:center; font-size:100px; font-family:verdana;">
                <b>
                    Contact Me 📧
                </b>
            </h1>
        </head>


        <main style="padding-bottom: 2%; padding-top: 3%">
            <!-- contact information -->
            <span class="flex justify-center" style="white-space: nowrap;">
                <div class = "flex justify-center items-center flex-col md:flex-row" style=" padding-bottom: 0.5%; ">

                    <!-- temporary image placeholder -->
                    <div class="scale-[100%]">
                        <img src="/images/convention.png" alt="convention" class="mr-4" style = "border-radius: 5%;" id="conventionPNG">
                    </div>


                    <!-- draws the directory and other effects (which are very pretty) -->
                    <div>
                        <nav class="flex-col flex space-x-4 md:mt-0 mt-8 pb-10" style="font-size: 40px; padding-left: 8%;">
                            {[
                                ['📱 Phone:', '+1 (860)930-7049', 'Tel: 123-456-7890'],
                                ['📧 E-Mail:', 'cole1.marino@gmail.com', 'mailto: cole1.marino@gmail.com'],
                                ['🔗 LinkedIn:', '\'Nicola Marino\'', 'https://www.linkedin.com/in/nicola-marino-5761601b4/'],
                                ['👨‍💻 Github:', '@cole-marino', 'https://github.com/cole-marino']

                            ].map(([title, info, url]) => (
                                <div class="c-card block hover:shadow-xl rounded-lg overflow-hidden hover:scale-[110%] px-8 py-1 text-slate-700 font-medium hover:bg-slate-100 hover:text-slate-900">
                                    <!-- links to email and other accounts -->
                                    <a href={url} target="_blank">
                                    <u>
                                        <p class="font-extrabold" style="padding-right: 15%; padding-top: 2%;">{title}</p>
                                    </u>
                                    <i class="font-bold" style="padding-right: 15%; font-size: 30px;">{info}</i>
                                    </a>
                                    
                                </div>
                            ))}
                            </nav>
                        </div>
                    </div>
            </span>


            <!-- disclamer -->
            <div class="mt-4">
                <b>
                    <i class="flex justify-center" style="font-size: 15px; color: black;">
                        *When reaching out, please include your name, affiliation, and purpose for reaching out. Thank you.
                    </i>
                </b>
            </div>
        </main>
    </body>


</DefaultLayout>
